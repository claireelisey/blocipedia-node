<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>

        <% include ../static/partials/navbar.ejs %>

        <main class="container">

            <% include ../static/partials/messages.ejs %>

            <h2>Welcome to Blocipedia</h2>

            <p>Please complete the form below to sign up.</p>

            <div class="row">
                <div class="col-md-8">
                <form action="/users" method="post">


                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input type="text" name="username" placeholder="Enter Username" aria-describedby="usernameHelp" class="form-control"/>
                        <small class="text-muted" id="passwordHelp">username must be at least 4 characters long</small>
                    </div>

                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" name="email" placeholder="Enter Email" aria-describedby="emailHelp" class="form-control"/>
                        <small class="text-muted" id="emailHelp">email address must be a valid address</small>
                    </div>

                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" name="password" placeholder="Enter Password" aria-describedby="passwordHelp" class="form-control"/>
                        <small class="text-muted" id="passwordHelp">password must be at least 6 characters long</small>
                    </div>

                    <div class="form-group">
                        <label for="passwordConfirmation">Password Confirmation:</label>
                        <input type="password" name="passwordConfirmation" placeholder="Enter Password Confirmation" aria-describedby="passwordHelp" class="form-control"/>
                    </div><br/>
                    
                    <button type="submit" class="btn btn-primary">Sign up</button>


                </form>
                </div>
            </div>


            
        </main>

        <% include ../static/partials/baseScripts.ejs %>

    </body>
</html>